CXXFLAGS += -O2 -march=native -ggdb3
CXXFLAGS += -pedantic -Wall -Wextra -Wwrite-strings -std=gnu++14
CXXFLAGS += `pkg-config --cflags glibmm-2.4 gstreamermm-1.0`

LDFLAGS += `pkg-config --libs glibmm-2.4 gstreamermm-1.0 sqlite3`

!cxx = |> g++ $(CXXFLAGS) -c %f -o %o |> %B.o
!ar = |> ar crs %o %f |>
